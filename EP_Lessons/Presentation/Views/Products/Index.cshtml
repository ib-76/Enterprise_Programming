@model Presentation.Models.ProductsListViewModel
﻿<h1>Products Catalogue</h1>

<form method="post" action="/Products/Search"  >
    <div>
        <table>
            <tr>
                <td>Search for product</td>
                <td>
                    <input type="text" class="form-control" name="keyword" />

                    <select name="category" class="form-control">
                        <option value="-1">Any category</option>
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                
                </td>
            </tr>
        </table>

        <input type="submit" value="Search" />
    </div>
</form>

<hr />


<form method="post" action="/Products/Checkout">

    <div class="d-flex gap-2">
        <input type="submit" value="Checkout" class="btn btn-secondary" name="buttonChoice" />
        <input type="submit" value="Delete" class="btn btn-danger" name="buttonChoice" />
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            var product = Model.Products[i];

            <div class="col">
                <div class="card h-100 shadow-sm">

                    <div class="p-2">
                        <input type="checkbox"
                               value="@product.Id"
                               name="productsToBuy[@i].ProductFK" />

                        <input type="number"
                               name="productsToBuy[@i].Quantity"
                               class="form-control mt-1"
                               min="1" />
                    </div>

                    <img class="card-img-top"
                         src="@(string.IsNullOrEmpty(product.ImagePath)
                                                         ? Url.Content("~/images/default.jpg")
                                                         : product.ImagePath)"
                     alt="@product.Name"
                     style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text"><strong>Price:</strong> €@product.Price</p>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <a href="/Products/Details/@product.Id" class="btn btn-primary w-100 mb-1">View</a>
                        <a href="/Products/Edit?productId=@product.Id" class="btn btn-warning w-100">Edit</a>
                    </div>

                </div>
            </div>
                }

    </div>
</form>




<div class="mt-3">
    @{
        int nextPage = ViewBag.CurrentPage != null
        ? (int)ViewBag.CurrentPage + 1
        : 2;

        bool showNextButton = ((ViewBag.PageSize - ViewBag.TotalItemsFetched) > 0) ? false : true;

        int previousPage = ViewBag.CurrentPage - 1;

        bool showPreviousButton = ViewBag.CurrentPage == 1 ? false : true;
    }

    @if (showPreviousButton)
    {
        <a href="/Products/Index?page=@previousPage
            "
           class="btn btn-primary">
            « Previous
        </a>
    }
    @if (showNextButton)
    {
        <a href="/Products/Index?page=@nextPage
            "
           class="btn btn-primary">
            Next »
        </a>
    }


</div>